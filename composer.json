{
    "name": "taxaos/doctrine-bulk",
    "description": "Simple classes that allows bulk operations on doctrine entities.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": ".avolver",
            "email": "avolver@gmail.com"
        },
        {
            "name": ".fry",
            "email": "fry@6dreams.net"
        }
    ],
    "require": {
        "php": ">=8.0",
        "doctrine/orm": "^2.5",
        "ext-pdo": "*",
        "symfony/cache": "^v3.4.47",
        "doctrine/annotations": "^1.13.3",
        "phpstan/phpstan": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Taxaos\\": "src/Taxaos",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit -c phpunit.build.xml --testdox --colors=always"
        ],
        "stan": [
            "vendor/bin/phpstan analyse src tests --level 8"
        ]

    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": ">8.5.30"
    }
}
